<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidJetpack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="H1" parent="Theme.AndroidJetpack">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="H3" parent="Theme.AndroidJetpack">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text" parent="Theme.AndroidJetpack">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#868686</item>
    </style>
</resources>